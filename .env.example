# Development mode (enables additional logging and debugging features)
DEVELOPMENT=false

# Namespace the operator manages (defaults to "default")
NAMESPACE=default

# CPU model for VMs: "host-model" (default for x86), "host-passthrough" (required for ARM64)
CPU_MODEL=host-model

# Machine type for VMs: "q35" (default for x86), "virt" (required for ARM64)
# ARM64 only supports "virt", x86_64 typically uses "q35" (modern) or "pc-i440fx" (legacy)
MACHINE_TYPE=q35

# CNI version for NetworkAttachmentDefinitions
NETWORK_ATTACHMENT_DEFINITION_CNI_VERSION=1.0.0

# PVC volume mode: "Block" (default) or "Filesystem"
PVC_VOLUME_MODE=Block

# PVC access mode for DataVolumes: "ReadWriteOnce" (default), "ReadWriteMany", "ReadOnlyMany"
# Use "ReadWriteOnce" for local-path, Ceph RBD; "ReadWriteMany" for CephFS, NFS
PVC_ACCESS_MODE=ReadWriteOnce

# Where to fetch public IPs from: "vmi" (default, from KubeVirt VMI) or "networkconfiguration"
IP_SOURCE=vmi

# Enable Containerized Data Importer (CDI) support
KUBEVIRT_SUPPORT_CONTAINERIZED_DATA_IMPORTER=false

# Name of the MachineProvider (required)
NAME_MACHINE_PROVIDER=kubevirt-provider

# Vitistack name (required for MachineProvider registration)
VITISTACK_NAME=vitistack

# Optional prefix for VM names
VM_NAME_PREFIX=

# Logging configuration
LOG_LEVEL=info
LOG_JSON=false
LOG_ADD_CALLER=true
LOG_DISABLE_STACKTRACE=false
LOG_UNESCAPED_MULTILINE=true
LOG_COLORIZE_LINE=true